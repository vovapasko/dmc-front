{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@pages/*": ["app/pages/*"],
      "@services/*": ["app/core/services/*"],
      "@store/*": ["app/core/store/*"],
      "@models/*": ["app/core/models/*"],
      "@components/*": ["app/core/components/*"],
      "@constants/*": ["app/core/constants/*"],
      "@shared/*": ["app/shared/*"],
      "@helpers/*": ["app/core/helpers/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
